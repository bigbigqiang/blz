<table class="table table-striped table-hover table-bordered view_manager">
    <thead>
    <tr class="table-title">
        <th class="span1" cond="delete_all"><input type="checkbox" id="select_all" /></th>
        <th class="span1" cond="status">状态
            <!--<span style="margin-left:10px"></span></th>-->
        <th class="span2" cond="indexType">索引任务类型
            <span style="margin-left:10px"><i class="icon-chevron-up"></i></span>
        </th>
        <th class="span2" cond="name">任务名称
            <span style="margin-left:10px"><i class="icon-chevron-up"></i></span>
        </th>
        <th class="span2" cond="sourceType">数据源类型
            <span style="margin-left:10px"><i class="icon-chevron-up"></i></span>
        </th>
        <th class="span3" cond="source">数据源名称
            <span style="margin-left:10px"><i class="icon-chevron-up"></i></span>
        </th>
        <th class="span2" cond="codeType">编码类型
            <span style="margin-left:10px"><i class="icon-chevron-up"></i></span>
        </th>
        <th class="span2" cond="layer">层级
            <span style="margin-left:10px"><i class="icon-chevron-up"></i></span>
        </th>
        <th class="span3" cond="createTime">开始时间
            <span style="margin-left:10px"><i class="icon-chevron-up"></i></span>
        </th>
        <th class="span2">启动</th>
        <th class="span2">操作</th>
        <th class="span2">查看详情</th>
        <th class="span1">删除</th>

    </tr>
    </thead>
    <tbody>
    {{#each dicName}}
        <tr>
            <td class='text-center'><input type="checkbox" value={{id}}></td>
            <td class='text-center linkStatus'>{{#linkStatus status}}{{/linkStatus}}</td>
            <td class='text-center' value={{indexType}}>{{#isIndexType indexType}}{{/isIndexType}}</td>
            <td class='text-center' value={{id}}>{{name}}</td>
            <td class='text-center'>{{#isSourceType sourceType}}{{/isSourceType}}</td>
            <td class='text-center'>{{tableName}}</td>
            <td class='text-center'>{{#isCodeType codeType}}{{/isCodeType}}</td>
            <td class='text-center'>{{#isLayer layer}}{{/isLayer}}</td>
            <td class='text-center'>{{createTime}}</td>
            <td class='text-center'>{{#startTask status}}{{/startTask}}</td>
            <td class='text-center'>
                <a class='update' href='javascript:;'>更新</a>
            </td>

            <td class='text-center'>
                <a class='checkDetails' href='javascript:;'>查看详情</a>
            </td>
            <td class='text-center'>
                <a class='delete' href='javascript:;'>删除</a>
            </td>
            <td class='text-center' style='display: none'>{{id}}</td>
        </tr>
    {{else}}
        <tr>
            <td colspan='12' class='text-center'>暂无数据</td>
        </tr>
    {{/each}}
    </tbody>
</table>
<input type="hidden" id="del" value="delView" />
