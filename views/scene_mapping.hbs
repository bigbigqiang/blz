<div class="clearfix">
    <div class="btn-group">
        <button id="sample_editable_1_new" class="btn green">添加<i class="icon-plus"></i>
        </button>
        <button class="btn" type="button" id="batch_del">批量删除</button>
        <select class="database-type" id="tableinfo_index_sourceType">
            <option value="0">全部业务场景</option>
            {{#each sourceType}}
                <option value={{id}}>{{sourceType}}</option>
            {{/each}}
        </select>
    </div>
</div>
<table class="table table-striped table-hover table-bordered tableInfo">
    <thead>
    <tr class="table-title">
        <th class="span2" cond="delete_all"><input type="checkbox" id="select_all"/></th>
        <th class="span2" cond="sourceType">业务场景
            <span style="margin-left:10px"><i class="icon-chevron-up"></i></span>
        </th>
        <th class="span2" cond="databaseType">数据库类型
            <span style="margin-left:10px"><i class="icon-chevron-up"></i></span>
        </th>
        <th class="span4" cond="databaseName">数据库
            <span style="margin-left:10px"><i class="icon-chevron-up"></i></span>
        </th>
        <th class="span3" cond="tableName">数据表
            <span style="margin-left:10px"><i class="icon-chevron-up"></i></span>
        </th>
        <!-- <th class="span2">密码</th>不应该显示 -->
        <th class="span2">删除</th>
    </tr>
    </thead>
    <tbody>
    {{#if sceneList}}
        {{#each sceneList}}
            <tr>
                <td class='text-center'><input  type="checkbox" value={{id}}></td>
                <td class='text-center' style='display: none'>{{id}}</td>
                <td class='text-center'>{{sourceType}}</td>
                <td class='text-center'>{{databaseType}}</td>
                <td class='text-center'>{{databaseName}}</td>
                <td class='text-center'>{{tableName}}</td>
                <td class='text-center'>
                    <a tableInfoId={{id}} class='delete'  href='javascript:;'>删除</a></td>
            </tr>
        {{/each}}
    {{else}}
        <tr>
            <td colspan="5" class='text-center'>暂无数据</td>
        </tr>
    {{/if}}
    </tbody>
</table>
<input type="hidden" id="del" value="delSource"/>
<div class="pagination pagination-mini" style="float: right; margin-right: 30px; margin-bottom: 20px;">
    <div class="M-box" totalPage={{totalPage}} page={{page}}></div>
</div>
<!--START TABLR BACKGROUNDGREY-->
<div class="tablebg-grey"></div>
<!--END TABLR BACKGROUNDGREY-->
<!--START TABLR ADD MEW-->
<div class="add-new" style="display: none;">
    <h4>
        <i class="icon-edit"></i>添加业务场景映射<img src="image/portlet-remove-icon-white.png"/>
    </h4>

    <form>
        <p class="input-text">
            <label>业务场景</label>
            <select id="tableinfo_sourceType" name="sourceType" style="width: 400px">
                <option value="0">选择业务场景</option>
                {{#each sourceType}}
                    <option value={{id}}>{{sourceType}}</option>
                {{/each}}
            </select>
        </p>
        <p class="input-text">
            <label>数据库</label>
            <select class="database-type2" id="tableinfo_databasename" name="databasename" style="width: 400px">
                <option value="0">选择数据库</option>
                {{#each databaseInfo}}
                    <option value ={{id}}>{{databaseName}}</option>
                {{/each}}
            </select>
        </p>
        <p class="input-text">
            <label>数据表</label>
            <select class="database-type3" id="tableinfo_tablename" name="tablename" style="width: 400px">
                <option value="0">选择数据表</option>
            </select>
        </p>
        <p class="input-text">
            <label>数据映射类型</label>
            <select class="database-type3" id="tableinfo_tableMapType" name="tableMapType" style="width: 400px">
                <option value='0'>选择数据映射类型</option>
                <option value='OTHER'>其它</option>
                <option value='POLYGON'>面</option>
                <option value='POINT'>点</option>
            </select>
            <b style="color:red;">
                ! 提交后不可更改</b>
        </p>
        <p class="btn-form">
            <span><input type="button" id="tableinfo_add" value="保 存"></span>
            <span><input type="button" value="取消" class="cancel"> </span>
        </p>
        <input type="hidden" value="table" name="flag">
    </form>
</div>
<!--END TABLR ADD MEW-->

</div>
</div>
