<div class="clearfix">
    <div class="btn-group">
        <button id="sample_editable_1_new" class="btn green">添加<i class="icon-plus"></i>
        </button>
        <button class="btn" type="button" id="batch_del">批量删除</button>
    </div>
</div>
<table class="table table-striped table-hover table-bordered auth_manager_table">
    <thead>
    <tr class="table-title">
        <th cond="delete_all"><input type="checkbox" id="select_all"/></th>
        <th cond="id" style="display: none;">id<span style="margin-left:10px"><i class="icon-chevron-up"></i></span></th>
        <th cond="auth_name">权限名<span style="margin-left:10px"><i class="icon-chevron-up"></i></span></th>
        <th cond="auth_url">权限url<span style="margin-left:10px"><i class="icon-chevron-up"></i></span></th>
        <th cond="auth_class">权限所属分类</th>
        <th>编辑</th>
        <th>删除</th>
    </tr>
    </thead>
    <tbody>
    {{#each authList}}
        <tr>
            <td class='text-center'><input  type="checkbox" value={{id}}></td>
            <td style="display: none;">{{id}}</td>
            <td class='text-center'>{{authName}}</td>
            <td class='text-center'>{{authUrl}}</td>
            <td class='text-center'>{{authClass}}</td>
            <td class='text-center'>
                <a class='edit' href='javascript:;'>编辑</a></td>
            <td class='text-center'>
                <a class='delete' href='javascript:;'>删除</a></td>
        </tr>
    {{else}}
        <tr><td colspan='7' class='text-center'>暂无数据</td></tr>
    {{/each}}
    </tbody>
</table>
<input type="hidden" id="del" value="delRole"/>
<div class="pagination pagination-mini" style="float: right; margin-right: 30px; margin-bottom: 20px;">
    <ul>
        {{#showPage totalPage}}
            <li><a href="#"><i class='icon-long-arrow-left'> </i> </a></li>
            {{#pageLi page}}{{/pageLi}}
            <li><a href="#"><i class='icon-long-arrow-right'> </i> </a></li>
        {{/showPage}}
    </ul>
</div>
<!--START TABLR BACKGROUNDGREY-->
<div class="tablebg-grey"></div>
<!--END TABLR BACKGROUNDGREY-->
<!--START TABLR ADD MEW-->
<div class="add-new" style="display: none;">
    <h4>
        <i class="icon-edit"></i>添加权限<img src="image/portlet-remove-icon-white.png"/>
    </h4>

    <form>
        <p class="input-text">
            <label>权限名</label><input type="text" id="auth_name" name="auth_name"><span>不能为空</span>
        </p>

        <p class="input-text">
            <label>权限url</label><input type="text" id="auth_url" name="auth_url"><span>不能为空</span>
        </p>
        <p class="input-text">
            <label>权限所属分类</label>
            <select name="auth_class" id="auth_class">
                <option value="0">请选择权限所属分类</option>
                <option value="1">基础页面</option>
            </select>
        </p>
        <p class="btn-form">
            <span><input type="button" value="保 存" id="save"> </span>
        </p>
        <input type="hidden" name="flag" value="default"> <input
            type="hidden" name="target" value="self">
    </form>
</div>
<!--END TABLR ADD MEW-->

<!--START TABLR CHANGE-->
<div class="change-message" style="display: none;">
    <h4>
        <i class="icon-edit"></i>编辑权限<img src="image/portlet-remove-icon-white.png">
    </h4>

    <form>
        <p class="input-text">
            <label>权限名</label><input type="text" id="auth_name1" name="auth_name1"><span>不能为空</span>
        </p>

        <p class="input-text">
            <label>权限url</label><input type="text" id="auth_url1" name="auth_url1"><span>不能为空</span>
        </p>
        <p class="input-text">
            <label>权限所属分类</label>
            <select name="auth_class1" id="auth_class1">
                <option value="0">请选择权限所属分类</option>
                <option value="1">基础页面</option>
            </select>
        </p>
        <p class="btn-form">
            <input type="button" value="保 存" id="update_save">
            <input type="button" value="取 消" class="cancel">
        </p>
        <input type="hidden" name="flag" value="source">
        <input type="hidden" name="originalAuthName" id="originalAuthName">
        <input type="hidden" name="originalAuthUrl" id="originalAuthUrl">
        <input type="hidden" name="originalAuthClass" id="originalAuthClass">
    </form>
</div>
<!--END TABLR CHANGE-->
</div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
</div>
</div>
<!-- END PAGE CONTENT -->
</div>
<!-- END PAGE CONTAINER-->
</div>
