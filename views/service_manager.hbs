<table class="table table-striped table-hover table-bordered databaseInfo">
    <thead>
    <tr class="table-title">
        <th class="span1" cond="delete_all"><input type="checkbox" id="select_all"/></th>
        <th class="span1" cond="status">状态
            <!--<span style="margin-left:10px"></span>-->
        </th>
        <th class="span2" cond="serviceType">服务类型
            <span style="margin-left:10px"><i class="icon-chevron-up"></i></span>
        </th>
        <th class="span2" cond="serviceName">服务名称
            <span style="margin-left:10px"><i class="icon-chevron-up"></i></span>
        </th>
        <th class="span4" cond="serviceComment">服务说明
            <span style="margin-left:10px"><i class="icon-chevron-up"></i></span>
        </th>
        <th class="span3" cond="permissionName">权限
            <span style="margin-left:10px"><i class="icon-chevron-up"></i></span>
        </th>
        <th class="span3" cond="starttime">发布日期
            <span style="margin-left:10px"><i class="icon-chevron-up"></i></span>
        </th>
        {{!-- <th class="span3" cond="username">订阅数
            <span style="margin-left:10px"><i class="icon-chevron-up"></i></span>
        </th>
        <th class="span3" cond="username">平均响应时间
            <span style="margin-left:10px"><i class="icon-chevron-up"></i></span>
        </th> --}}
        <th class="span2">操作</th>
        <th class="span2">删除</th>
        <th class="span2">查看详情</th>
        <th class="span2">测试连接</th>
    </tr>
    </thead>
    <tbody>
    {{#each sourceTypeList}}
        <tr>
            <td class='text-center'><input type="checkbox" value={{serviceId}}></td>
            <td class='text-center linkStatus span1'>{{#linkStatus status}}{{/linkStatus}}</td>
            <td class='text-center' >{{serviceType}}</td>
            <td class='text-center' value={{serviceName}}>{{serviceName}}</td>
            <td class='text-center'>{{serviceComment}}</td>
            <td class='text-center'>{{permissionName}}</td>
            <td class='text-center'>{{starttime}}</td>
            {{!--<td class='text-center'>{{num}}</td>
            <td class='text-center'>{{time}}</td> --}}
            <td class='text-center'>
                {{#status status}}{{/status}}
            </td>
            <td class='text-center'>
                <a class='delete' href='javascript:;'>删除</a>
            </td>
            <td class='text-center'>
                <a class='checkDetails' href='javascript:;'>查看详情</a>
            </td>

            <td class='text-center'>
                <a class='connectionCheck' href='javascript:;'>测试连接</a>
            </td>
        </tr>
    {{else}}
        <tr>
            <td colspan='11' class='text-center'>暂无数据</td>
        </tr>
    {{/each}}
    </tbody>
</table>
<div class="tablebg-grey"></div>
<div class="pagination pagination-mini" style="float: right; margin-right: 30px; margin-bottom: 20px;">
    <div class="M-box" totalPage={{totalPage}} page={{page}} totalNum={{totalNum}}></div>
</div>
