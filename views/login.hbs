    <div class="login">
        <div class="user">
            <input type="text" name="username" placeholder="登录名"/>
            <b></b>
            <span class="msg wrong">登录名错误</span>
            <span class="msg correct"><img src="/image/loginCorrect.png" alt=""/></span>
        </div>
        <div class="pwd">
            <input type="password" name="password" placeholder="密码"/>
