
<div id="map" style="width: 49.8%;height: 49.8%;float: left;margin-bottom: 5px">
    <div class="modal-info" style="position:absolute;width:100%;height:30px;z-index:9;top:0;left:0;background:rgba(0,0,0,.3)
              ;display:none;text-align:center;color:#fff;font-weight:bold;line-height:30px;font-size:16px;letter-space:0.1em">该建筑无坐标信息</div>
</div>

<div class="informationBox" style="width:49.8%;height: 49.8%;float: right;margin-bottom: 5px">
    <h4 class="header-4">
        房屋信息
    </h4>
    <div class="scroll">
        <div class="infoContent infoBox">
            <div class="infoList" style="width: 30%;float: left;margin-left: 10%">
                {{#buildInfo}}
                <img src="/image/{{#if photo}}{{photo}}{{else}}photo.jpg{{/if}}" style="margin-top:35%;">
                {{/buildInfo}}
            </div>
            <div class="infoList" style="width: 50%;float: right;margin-top: 8%">
                <div id="lat" style="display: none">{{lat}}</div>
                <div id="lng" style="display: none">{{lng}}</div>
                {{#buildInfo}}
                <ul class="infoAttrName infoAttrName3">
                    <li><span>地址：</span>{{#if address}}{{address}}{{else}}无{{/if}}</li>
                    <li><span>建筑类型：</span>{{#if buildType}}{{buildType}}{{else}}无{{/if}}</li>
                    <li><span>单元数：</span>{{#if unitNum}}{{unitNum}}{{else}}无{{/if}}</li>
                    <li><span>地上层数：</span>{{#if upNum}}{{upNum}}{{else}}无{{/if}}</li>
                    <li><span>地下层数：</span>{{#if downNum}}{{downNum}}{{else}}无{{/if}}</li>
                    <li><span>所属社区：</span>{{#if community}}{{community}}{{else}}无{{/if}}</li>
                </ul>
                {{/buildInfo}}
            </div>
        </div>
    </div>
</div>

<div class="informationBox buildingDetail" style="width: 49.8%;height: 49.8%;float: left;">
    <h4 class="header-4">
        楼层
        <i class="light"></i>
    </h4>
    <div class="informationContent roomList">
        <h5 class="informationH5">
            <ul class="houseTab">
                {{#each floorInfo}}
                <li>{{unit}}单元</li>
                {{/each}}
            </ul>
            人口总数:<span>{{totlePeople}}</span>人
        </h5>
        <div class="floorTab">
            {{#each floorInfo}}
            <ul class="floorList">
                {{#each floor}}
                <li>
                    {{!--<div class="floorNum" floornum="1">一层</div>--}}
                    <div class="rooms">
                        <span class="floorNum" floornum="1">{{floorNum}}层</span>
                        {{#each rooms}}
                        <span roomid="{{roomId}}">{{roomNum}}</span>
                        {{/each}}
                    </div>
                </li>
                {{/each}}
            </ul>
            {{/each}}
        </div>
    </div>
    <div class="infoContent roomDetail" style="padding:0;display: none">
        <h5 class="informationH5">
            <ul>
                <li><i></i>返回</li>
            </ul>
            <span></span>房间
        </h5>
        <div class="floorTab">
        <table class="informationTable peopleList">
            <thead>
            <tr>
                <td>姓名</td>
                <td>性别</td>
                <td>电话</td>
                <td>户籍地址</td>
                <td>工作单位</td>
            </tr>
            </thead>
            <tbody>
            <tr>
            </tr>
            </tbody>
        </table>
        </div>
    </div>
</div>

<div class="informationBox buildingDetail" style="width: 49.8%;height: 49.8%;float: right;">
    <h4 class="header-4">
        企业
        <i class="light"></i>
    </h4>
    <div class="infoContent" id="cmpTable">
        <table class="informationTable cmpList">
            <thead>
            <tr>
                <td>企业名称</td>
                <!--<td>安全生产状态</td>-->
                <td>安全生产预警次数</td>
            </tr>
            </thead>
            <tbody>
            {{#each companyInfo}}    
            <tr cmpid="{{id}}">
                <td>{{name}}</td>
                <td>
                    {{#if safewarningTime}}
                        {{#safewarningTime}}
                            {{#if a}}<span class="warningRed"></span> <span>{{a}}</span>{{/if}}
                            {{#if b}}<span class="warningOrange"></span> <span>{{b}}</span>{{/if}}
                            {{#if c}}<span class="warningYellow"></span> <span>{{c}}</span>{{/if}}
                            {{#if d}}<span class="warningBlue"></span> <span>{{d}}</span>{{/if}}
                        {{/safewarningTime}}
                    {{else}}无{{/if}}
                </td>
            </tr>
            {{else}}
                <tr>
                    <td colspan='2' class='text-center'>暂无数据</td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
</div>

{{#section 'js'}}
<script type="text/javascript" src="/js/detail_building.js"></script>
{{/section}}
