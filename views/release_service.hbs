{{#section 'head'}}
    <link rel="stylesheet" href="/css/release_service.css">
    {{!--<link rel="stylesheet" href="/css/link_theme/dark/table.css">--}}

    <!--<link rel="stylesheet" href="/css/jquery.mCustomScrollbar.min.css">-->

{{/section}}
<div class="row-fluid" id="">
    <ul class="processStep span9 offset1">
        <li class="activeStep span4"><span>1.命名服务</span></li>
        <li class="span4"><span>2.设定参数</span></li>
        <li class="span4"><span>3.发布服务</span></li>
    </ul>
</div>
<div class="row-fluid " id="viewStepOne">
    <div class="row-fluid">
        <form class="saveViewForm form-horizontal span11 offset1">
            <p class="input-text control-group">
                <label class="control-label span2">服务类型：</label><select name="wsType" id="wsType" class="span6">
            </select>
                <span id="wsTypeIcon"><img src="iconfont/images/downbtn.png"></span>
                <em class="requiredStar">*</em><span>不能为空</span>
            </p>

            <p class="input-text control-group">
                <label class="control-label span2">服务名称：</label>
                <input type="text" id="wsName" name="wsName" class="span6">
                <em class="requiredStar">*</em><span>不能为空</span>
            </p>

            <p class="input-text control-group">
                <label class="control-label span2">服务内容类型：</label>
                <select name="wsContentType" id="wsContentType" class="span6">
                </select>
                <span id='wsContentTypeIcon'><img src='iconfont/images/downbtn.png'></span>

                <em class="requiredStar">*</em><span>不能为空</span>
            </p>

            <p class="input-text control-group" style="display: block;">
                <label class="control-label span2">视图名称：</label><select name="viewName" id="viewName" class="span6">
            </select>
                <span id='viewNameIcon'><img src='iconfont/images/downbtn.png'></span>
                <em class="requiredStar">*</em><span>不能为空</span>
            </p>
            <p class="input-text control-group" style="display: none;">
                <label class="control-label span2">字典名称：</label><select name="dicName" id="dicName" class="span6">
            </select>
                <span id='dicNameIcon'><img src='iconfont/images/downbtn.png'></span>
                <em class="requiredStar">*</em><span>不能为空</span>
            </p>
            <p class="input-text control-group">
                <label class="control-label span2">权限：</label><select name="viewAuth" id="viewAuth" class="span6">
                <option value="0">请选择--</option>
                <option value="0">webService SOAP</option>
                <option value="0">ORACLE</option>
                <option value="0">MONGODB</option>
            </select>
                <span id='viewAuthIocn'><img src='iconfont/images/downbtn.png'></span>

                <em class="requiredStar">*</em><span>不能为空</span>
            </p>
            <p class="input-text control-group">
                <label class="control-label span2">服务说明：</label><input type="text" id="wsNote" name="wsNote"
                                                                       class="span6"><span>不能为空</span>
            </p>

        </form>
    </div>
    <div class="row-fluid">
        <div class="stepBtn span3 offset9">
            <a class="btn  btn-next btn-abled firstBtn">下一步</a>
        </div>
    </div>
</div>
<div class="row-fluid " id="viewStepTwo" style="display:none;">
    <div class="row-fluid">
        <div class="span12">
            <div class="service-head clearfix">
                <h3 class="pull-left">请求参数</h3>
                <i class="icon-chevron-up pull-right" data-toggle='collapse' data-target='#req-params-table'></i>
                <button class="btn btn-primary pull-right" id="add-req-params">添加请求参数</button>
            </div>
            <div class="service-content collapse in" id="req-params-table">
                <table class="table table-striped table-hover req-params-table ">
                    <thead>
                    <tr>
                        <th>请求参数名称</th>
                        <th>响应参数名称</th>
                        <th>参数类型</th>
                        <th>映射方式</th>
                        <th>必须</th>
                        <th>操作</th>
                    </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div class="service-head clearfix">
                <h3 class="pull-left">响应参数</h3>
                <i class="icon-chevron-up pull-right" data-toggle='collapse' data-target='#res-params-table'></i>
                <button class="btn btn-primary pull-right" id="add-res-params">添加响应参数</button>
            </div>
            <div class="service-content collapse in" id="res-params-table">
                <table class="table table-striped table-hover  res-params-table">
                    <thead>
                    <tr>
                        <th>请求参数名称</th>
                        <th>响应参数名称</th>
                        <th>参数类型</th>
                        <th>操作</th>
                    </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div class="service-head clearfix">
                <h3 class="pull-left">错误代码</h3>
                <i class="icon-chevron-up pull-right" data-toggle='collapse' data-target='#error-code-table'></i>
                <button class="btn btn-primary pull-right" id="add-error-code">添加错误代码</button>
            </div>
            <div class="service-content collapse in" id="error-code-table">
                <table class="table table-striped table-hover  error-code-table">
                    <thead>
                    <tr>
                        <th>错误代码</th>
                        <th>处置建议</th>
                        <th>说明</th>
                        <th>操作</th>
                    </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="span12">
            <div class="service-head clearfix">
                <h3 class="pull-left">模拟返回结果</h3>
                <i class="icon-chevron-up pull-right" data-toggle='collapse' data-target='#test-result'></i>
                <button class="btn btn-primary pull-right" id="test-search">测试查询</button>
            </div>
            <div class="service-content collapse in" id="test-result">
                <div class="test-result">
                            <table class="table table-bordered" id="result-table"></table>
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="stepBtn span3 offset9">
            <a class="btn btn-prev">上一步</a>
            <a class="btn  btn-next btn-abled">下一步</a>
        </div>
    </div>
</div>
<div class="row-fluid " id="viewStepThree" style="display:none;">
    <div class="row-fluid">
        <div class="span12">
            <div class="service-head clearfix">
                <h3 class="pull-left">服务基本信息</h3>
                <i class="icon-chevron-up pull-right" data-toggle='collapse' data-target='#service-base-info'></i>
            </div>
            <div class="service-content  collapse in" id="service-base-info">

            </div>
        </div>
        <div class="row-fluid">
            <div class="span12">
                <div class="service-head clearfix">
                    <h3 class="pull-left">服务参数信息</h3>
                    <i class="icon-chevron-up pull-right" data-toggle='collapse' data-target='#service-params-info'></i>
                </div>
                <div class="service-content  collapse in" id="service-params-info">
                    <div class="row-fluid">
                        <div class="span11">
                            <div class="service-head clearfix">
                                <h3 class="pull-left">请求参数</h3>
                                <i class="icon-chevron-up pull-right" data-toggle='collapse'
                                   data-target='#service-params-req'></i>
                            </div>
                            <div class="service-content   collapse in serviceThead" id="service-params-req">
                                <table class="table">
                                    <thead>
                                    <tr>
                                        <th>请求参数名称</th>
                                        <th>响应参数名称</th>
                                        <th>参数类型</th>
                                        <th>映射方式</th>
                                        <th>必须</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span11">
                            <div class="service-head clearfix">
                                <h3 class="pull-left">响应参数</h3>
                                <i class="icon-chevron-up pull-right" data-toggle='collapse'
                                   data-target='#service-params-res'></i>
                            </div>
                            <div class="service-content   collapse in" id="service-params-res">
                                <table class="table">
                                    <thead>
                                    <tr>
                                        <th>请求参数名称</th>
                                        <th>响应参数名称</th>
                                        <th>参数类型</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="row-fluid">
                        <div class="span11">
                            <div class="service-head clearfix">
                                <h3 class="pull-left">错误代码</h3>
                                <i class="icon-chevron-up pull-right" data-toggle='collapse'
                                   data-target='#service-params-error'></i>
                            </div>
                            <div class="service-content   collapse in" id="service-params-error">
                                <table class="table">
                                    <thead>
                                    <tr>
                                        <th>错误代码</th>
                                        <th>处置建议</th>
                                        <th>说明</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid">
        <div class="stepBtn span3 offset9">
            <a class="btn btn-prev">上一步</a>
            <a class="btn btn-complete btn-abled">完成</a>
        </div>
    </div>
</div>
{{#section 'js'}}
    <script src="js/release_service.js"></script>
