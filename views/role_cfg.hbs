<div class="clearfix">
    <div class="btn-group">
        <button id="sample_editable_1_new" class="btn green">添加<i class="icon-plus"></i>
        </button>
        <button class="btn" type="button" id="batch_del">批量删除</button>
    </div>
</div>
<table class="table table-striped table-hover table-bordered role_table">
    <thead>
    <tr class="table-title">
        <th cond="delete_all"><input type="checkbox" id="select_all"/></th>
        <th cond="id" style="display: none;">id<span style="margin-left:10px"><i class="icon-chevron-up"></i></span>
        </th>
        <th cond="role">角色<span style="margin-left:10px"><i class="icon-chevron-up"></i></span></th>
        <th cond="role_name">角色名</th>
        <th cond="auth">分配权限</th>
        <th>编辑</th>
        <th>删除</th>
    </tr>
    </thead>
    <tbody>
    {{#each roleList}}
        <tr>
            <td class='text-center'><input type="checkbox" value={{id}}></td>
            <td style="display: none;">{{id}}</td>
            <td class='text-center'>{{eName}}</td>
            <td class='text-center'>{{cName}}</td>
            <td class='text-center'><a class='check_auth' href='javascript:;'>查看</a></td>
            <td class='text-center'>
                <a class='edit' href='javascript:;'>编辑</a></td>
            <td class='text-center'>
                <a class='delete' href='javascript:;'>删除</a></td>
        </tr>
    {{else}}
        <tr>
            <td colspan='7' class='text-center'>暂无数据</td>
        </tr>
    {{/each}}
    </tbody>
</table>
<input type="hidden" id="del" value="delRole"/>
<div class="pagination pagination-mini" style="float: right; margin-right: 30px; margin-bottom: 20px;">
    <ul>
        {{#showPage totalPage}}
            <li><a href="#"><i class='icon-long-arrow-left'> </i> </a></li>
            {{#pageLi page}}{{/pageLi}}
            <li><a href="#"><i class='icon-long-arrow-right'> </i> </a></li>
        {{/showPage}}
    </ul>
</div>
<!--START TABLR BACKGROUNDGREY-->
<div class="tablebg-grey"></div>
<!--END TABLR BACKGROUNDGREY-->
<!--START TABLR ADD MEW-->
<div class="add-new" style="display: none;">
    <h4>
        <i class="icon-edit"></i>添加角色<img src="image/portlet-remove-icon-white.png"/>
    </h4>

    <form>
        <p class="input-text">
            <label>角色（英文）</label><input type="text" id="role" name="role"><span>不能为空</span>
        </p>

        <p class="input-text">
            <label>角色名</label><input type="text" id="roleName" name="roleName"><span>不能为空</span>
        </p>

        <p class="btn-form">
            <span><input type="button" value="保 存" id="save"> </span>
        </p>
        <input type="hidden" name="flag" value="default"> <input
            type="hidden" name="target" value="self">
    </form>
</div>
<!--END TABLR ADD MEW-->

<!--START TABLR CHANGE-->
<div class="change-message" style="display: none;">
    <h4>
        <i class="icon-edit"></i>编辑角色<img
            src="image/portlet-remove-icon-white.png">
    </h4>

    <form>
        <p class="input-text">
            <label>角色（英文）</label><input readonly id="role1" type="text" name="newRole"><span>不能为空</span>
        </p>

        <p class="input-text">
            <label>角色名</label><input type="text" id="roleName1" name="newRoleName"><span>不能为空</span>
        </p>

        <p class="btn-form">
            <input type="button" value="保 存" id="update_save">
            <input type="button" value="取 消" class="cancel">
        </p>
        <input type="hidden" name="flag" value="source">
        <input type="hidden" name="roleId" id="roleId">
        <input type="hidden" name="originaleName" id="originaleName">
        <input type="hidden" name="originalcName" id="originalcName">
    </form>
</div>
<div  id="auth_modal" style="display: none;">
    <h4>
        <i class="icon-edit"></i>权限编辑<img
            src="image/portlet-remove-icon-white.png">
    </h4>

    <div id="auth_class">
        <div class="auth_item">
            <h5>基础页面</h5>
            <ul class="auth_list-item"></ul>
        </div>
    </div>
    <p class="btn-form">
        <input type="button" value="保 存" id="update_auth">
        <input type="button" value="取 消" class="cancel">
    </p>
    <input type="hidden" name="allPermission" id="allPermission">
    <input type="hidden" name="rolePermission" id="rolePermission">
    <input type="hidden" name="roleId1" id="roleId1">
</div>
<!--END TABLR CHANGE-->
</div>
</div>
<!-- END EXAMPLE TABLE PORTLET-->
</div>
</div>
<!-- END PAGE CONTENT -->
</div>
<!-- END PAGE CONTAINER-->
</div>
<!-- END PAGE -->
