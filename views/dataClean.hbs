{{#section 'head'}}
    <link rel="stylesheet" href="/css/dataPerspective.css">
    {{!--<link rel="stylesheet" href="/css/link_theme/dark/table.css">--}}

    <link rel="stylesheet" href="/css/icon.css">
    <link rel="stylesheet" href="/css/jquery.mCustomScrollbar.min.css">

{{/section}}
<div class="row-fluid" id="dataTitle">
    <ul class="processStep span11">
        <li class="activeStep span6"><span>1.选择数据源</span></li>
        <li class="span6"><span>2.<label style="display: inline" class="perspectiveType">新建</label>清洗任务</span></li>
    </ul>
</div>
<div class="row-fluid " id="selectData">
    <form class="form-horizontal span9 ">
        <p class="input-text control-group">
            <label class="control-label span4">任务名称：</label>
            <input type="text" id="perspective"  class="span7" style="float: left;" >

            <span class="msg">不能为空</span>
            <span class="error">不能有特殊字符</span>
            <span class="repeat">名称重复</span>
        </p>
        <p id="data-icon" class="input-text control-group">
            <label  class="control-label span4">数据源类型：</label>

            <select name="" id="sourceType" class='span7' style='float: left'>
                <option value="db">数据库</option>
                <option value="ws">服务</option>
                <option value="view">视图</option>
                <option value="dic">字典</option>
            </select>
            <!--<span id="icon-select"><img src="iconfont/images/downbtn.png"></span>-->

        </p>


        <div id="switchSource"></div>
    </form>
    <div class="row-fluid">
        <div class="stepBtn span3 offset9">
            <button class="btn blue btn-next btn-abled">下一步</button>
        </div>
    </div>
</div>
<div class="row-fluid "  id="dataClean" style="display:none;" >
    <div class="row-fluid">
        <h3  class="createTable"><i class="iconfont icon-link_xinjianshujutoushibiao"></i><span class="perspectiveType">新建</span>清洗任务</h3>
        <div class="span8">
            <div id="tableBox">
                <table id="table" class="table table-responsive table-striped table-hover table-bordered">
                    <thead></thead>
                    <tbody></tbody>
                </table>
            </div>
        </div>
        <div class="span4 right createBaoBiao">
            <div class="row-fluid">
                <div class="span12">
                    <h3><i class="iconfont icon-link_baobiaoziduan"></i>报表字段</h3>
                    <div class="controls" id="tableColumn">
                        <!--<div><input type="checkbox" value="" /> <span>Checkbox 1</span></div>
                        <div><input type="checkbox" value="" /> <span>Checkbox 2</span></div>
                        <div><input type="checkbox" value="" /> <span>Checkbox 3</span></div>-->
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12" id="clean">
                    <h3><i class="icon-reorder"></i>清洗规则</h3>
                    <div class="controls" >
                        <from>
                            <div class="innerBox form-group ">
                                <label class="span4">清洗规则类型：</label>
                                <select name="" id="cleanType" class="span7">
                                    <option value="nulldispose" class="form-control">空值处理</option>
                                    <option value="errordispose" class="form-control">异常值处理</option>
                                    <option value="repeat" class="form-control">重复值处理</option>
                                </select>
                                <!--<span class="down"><img src="iconfont/images/downbtn.png"></span>-->

                                <div id="switchType" class="form-group">
                                    <div class="nullType">
                                        <label  class="span4">填充内容：</label>
                                        <input type="text" class="form-control fill span7">
                                    </div>
                                    <div class="exceptionType" style="display: none">
                                        <label class="span4">字段类型：</label>
                                        <select name="" id="columType" class="span7">
                                            <option value="digital" class="form-control" class="number">数字</option>
                                            <option value="text" class="form-control" class="wenzi">文字</option>

                                        </select>
                                        <div class="switchbox">
                                            <div class="maxminbox">
                                                <label class="span4">最小值：</label>
                                                <input type="text" id="min" class="span7"/>
                                                <br/>
                                                <label class="span4">最大值：</label>
                                                <input type="text"  id="max" class="span7"/>
                                            </div>
                                            <div class="wenzibox" style="display: none">
                                                <label class="span4">填充内容：</label>
                                                <input type="text"  class="form-control fill span7"/>

                                            </div>
                                        </div>


                                    </div>
                                    <!--<div class="repeatType">-->
                                        <!--<label  class="span4">填充内容：</label>-->
                                        <!--<input type="text" class="form-control fill span7">-->
                                    <!--</div>-->
                                </div>
                            </div>
                        </from>
                    </div>
                </div>

                <div>
                    <div class="stepBtn span11" style="border:none">
                        <a class="btn btn-prev blue" >上一步</a>
                        <!--<a class="btn btn-success green btn-reset" >重置</a>-->
                        <a class="btn btn-update  test" >预览</a>
                        <!--<a class="btn btn-start  start" >启动</a>-->
                        <a class="btn  btn-save " >保存</a>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>
{{#section 'js'}}
    <!--<script src="js/jsPlumb-2.2.3.js"></script>-->
    <script src="js/jquery.mCustomScrollbar.concat.min.js"></script>
    <script src="js/dataClean.js"></script>{{/section}}